#!/usr/bin/python

import smtplib

sender = 'yann.toe@al-enterprise.com'
receivers = ['francesco.furfaro@cgi.com']

message = """From: Yann Toe <yann.toe@al-enterprise.com>
To: Francesco Furfaro <francesco.furfaro@cgi.com>
MIME-Version: 1.0
Content-type: text/html
Subject: Welcome to You

<html>
<body>
<p>Hello</p>
<p>How are you ?</p>
<p>See you ! you can contact me <a href="http://al-entreprise.com/rid=5445">here</a></p>

Regards !

<img src="data:image/png;base64,">

</body>
</html>
"""

try:
   smtpObj = smtplib.SMTP('localhost')
   smtpObj.sendmail(sender, receivers, message)         
   print "Successfully sent email"
except SMTPException:
   print "Error: unable to send email"
